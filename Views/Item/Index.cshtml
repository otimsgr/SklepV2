@model IEnumerable<BigJigSaw.Models.Item>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Produkty</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Item" asp-action="Create"class="btn btn-primary">Stworz nowy produkt</a>
            </div>
        </div>
        <br />

        @if(Model.Count() > 0)
         {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Producent
                        </th>
                        <th>
                            Nazwa produktu
                        </th>
                        <th>
                            Cena
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                   {
                       <tr>
                           <td width="30%">@item.Producer</td>
                           <td width="30%">@item.Model</td>
                           <td width="30%">@item.Price</td>
                           <td width="30%">
                           <div class="w-100 btn-group"role="group">
                               <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Edytuj</a>
                               <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Usuń</a>
                           </div>
                           </td>
                       </tr>
                   }
                </tbody>
        </table>

    }
    else
    {
        <p> Brak produktów </p>
    }

    </div>