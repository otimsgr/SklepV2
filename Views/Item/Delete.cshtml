@model BigJigSaw.Models.Item

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary"All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Usun produkt</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Producer"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Producer" disabled class="form-control" />                        
                    </div>
                    <div class="col-4">
                        <input asp-for="Model" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Usun" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Cofnij</a>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
